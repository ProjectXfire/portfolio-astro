---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --neon-color: 1px 1px 10px rgba(8, 8, 62, 1);
    --primary-color: white;
    --secondary-color: rgb(156, 133, 178);
    --alert-color: rgb(196, 39, 39);
    --loading-btn-color: rgb(183, 183, 183);
    --box-color: rgb(24, 8, 48);
    --box-color2: rgb(34, 14, 65);
    --background: radial-gradient(
      circle,
      rgba(8, 8, 62, 1) 0%,
      rgba(34, 11, 38, 1) 100%,
      rgba(245, 176, 255, 1) 100%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: var(--background);
    color: var(--primary-color);
    text-shadow: 1px 1px 10px var(--primary-color);
  }
  body {
    max-width: 1200px;
    margin: auto;
    padding-bottom: 30px;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
  a,
  button,
  textarea {
    font-family: inherit;
    color: inherit;
    text-decoration: none;
  }
  p {
    text-align: justify;
    margin: 0;
  }
  h1 {
    font-size: 3rem;
  }
</style>
